}

# Main execution
main() {
    log "INFO" "Starting Comprehensive Live Payment System Testing"
    log "INFO" "Target: $TEST_ROUNDS rounds (minimum $TOTAL_TARGET_RUNS total runs)"
    log "INFO" "Results will be saved to: $RESULTS_DIR"
    
