      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install API dependencies
        working-directory: ./api
        run: |
          npm ci

      - name: Wrangler Version
        working-directory: ./api
        run: |
          npx wrangler --version

      - name: Deploy Worker (production)
        working-directory: ./api
        run: |
